@model TrainingFPT.Models.LoginViewModel

@{
    ViewData["title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card-group d-flex flex-column-reverse flex-md-row">
            <div class="card col-md-7 p-4 mb-0">
                <div class="card-body">
                    <h1 class="row justify-content-center">Login</h1>
                    <p class="text-medium-emphasis">Sign In to your account</p>


                    @using (Html.BeginForm("Handle", "Login", FormMethod.Post))
                    {
                        <div class="input-group mb-3">
                            <span class="input-group-text">
                                <svg class="icon">
                                    <use xlink:href="/training/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                                </svg>
                            </span>
                            @* <input class="form-control shadow-none" type="text" placeholder="Username"> *@

                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control shadow-none", @placeholder = "Username" })
                        </div>
                        <div class="input-group mb-4">
                            <span class="input-group-text">
                                <svg class="icon">
                                    <use xlink:href="/training/vendors/coreui/icons/svg/free.svg#cil-lock-locked"></use>
                                </svg>
                            </span>
                            @* <input class="form-control shadow-none" type="password" placeholder="Password"> *@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control shadow-none", @placeholder = "Password" })
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary" type="submit" id="login">Login</button>
                            </div>
                        </div>
                    }


                </div>
            </div>
            <div class="card col-md-5 text-white bg-primary py-5 mb-0">
                <div class="card-body text-center">
                    <div>
                        <h2>FPT HR Training System</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        @* <button class="btn btn-lg btn-outline-light mt-3" type="button">Register Now!</button> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>